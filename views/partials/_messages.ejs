<% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
  <div class="alert alert-error">
    <ul>
      <% errors.forEach(err => { %>
        <li><%= err.msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-error">
    <p><%= error %></p>
  </div>
<% } %>

<% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success">
    <p><%= success %></p>
  </div>
<% } %>