<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head', { title: 'Error' }) %>
  </head>
  <body>
    <div class="container">
        <div class="error-page">
            <h1>ðŸ˜• Oops!</h1>
            <h2><%= message %></h2>
            
            <% if (error && error.status) { %>
                <p class="error-code">Error <%= error.status %></p>
            <% } %>
            
            <% if (process.env.NODE_ENV === 'development' && error && error.stack) { %>
                <pre class="error-stack"><%= error.stack %></pre>
            <% } %>
            
            <a href="/" class="btn btn-primary">Go Home</a>
        </div>
    </div>
  </body>
</html>

